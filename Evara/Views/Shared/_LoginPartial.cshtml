@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex flex-row justify-content-center align-items-center gap-2">
        <a class="text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="font-size: 1rem;">Hello @User.Identity?.Name!</a>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn p-2">Logout</button>
        </form>
    </div>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login">
        <img class="svgInject" alt="Evara" src="~/imgs/theme/icons/icon-user.svg">
    </a>
}
