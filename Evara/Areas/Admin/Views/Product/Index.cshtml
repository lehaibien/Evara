@model IEnumerable<Product>
<div class="container p-3">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products List</h2>
            <p>List of products</p>
        </div>
        <div>
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary btn-sm rounded">Create new</a>
        </div>
    </div>
    <table class="table table-hover table-bordered border-primary">
        <thead class="thead-dark">
            <tr>
                <th>Product Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Size</th>
                <th>Description</th>
                <th>Image path</th>
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                
                <tr>
                    <td width="15%">@item.Name</td>
                    <td width="10%">@item.Brand.Name</td>
                    <td width="10%">@item.Category.Name</td>
                    <td width="10%">@item.Size</td>
                    <td width="25%">@item.Description</td>
                    <td width="10%">@item.ImagePath</td>
                    <td width="20%">
                        <div class="d-flex">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@item.ProductID" class="btn btn-sm font-sm rounded btn-brand d-flex justify-content-center align-items-center mr-10">
                                <i class="material-icons md-edit"></i> Edit
                            </a>
                            <a href="#" class="btn btn-sm font-sm btn-light rounded d-flex justify-content-center align-items-center">
                                <i class="material-icons md-delete_forever"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>