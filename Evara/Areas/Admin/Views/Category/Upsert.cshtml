@model Category
<div class="container">
    <form method="post" asp-action="Upsert" class="p-3">
        <div class="form-group">
            <input asp-for="CategoryID" type="hidden" value="@Model.CategoryID" />
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">@(Model.CategoryID == 0 ? "Tạo mới" : "Lưu")</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>